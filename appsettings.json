{
  "Database": {
    "Provider": "SQLite"
  },
  "ConnectionStrings": {
    "Sqlite": "Data Source=App_Data/filegallery.db"
  },
  "Security": {
    "RequireWindowsAuth": false,
    "AdminADGroup": "",
    "AllowedExtensions": ".pdf,.png,.jpg,.jpeg,.gif,.txt,.csv,.mp4,.mp3",
    "MaxUploadSizeMB": 50
  },
  "Storage": {
    "Root": "Content",
    "AnonymousUploadFolder": "publicupload"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}