@{
    var title = ViewData["Title"] as string ?? "File Gallery";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - File Gallery</title>
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
<header class="topbar">
    <div class="brand">File Gallery</div>
    <div class="nav">
        <a href="/">Home</a>
        <a href="/Admin">Admin</a>
        <a class="upload" href="/Files/Upload" target="_blank">Anonymous Upload</a>
    </div>
</header>
<main>
    @RenderBody()
</main>
<footer class="footer">
    <small>&copy; @(DateTime.UtcNow.Year) File Gallery</small>
</footer>
</body>
</html>
